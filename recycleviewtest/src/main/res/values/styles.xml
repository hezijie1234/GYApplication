<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>
    <declare-styleable name="MoreTextStyle">
        <attr name="mytextSize" format="dimension" />
        <attr name="mytextColor" format="color" />
        <attr name="maxLine" format="integer" />
        <attr name="moreText" format="string|reference" />
        <attr name="expand" format="boolean" />
    </declare-styleable>
    <declare-styleable name="ExpandLayout">
        <attr name="minHeight" format="integer" />
        <attr name="duration" format="integer" />
        <attr name="isExpand" format="boolean" />
    </declare-styleable>
</resources>
